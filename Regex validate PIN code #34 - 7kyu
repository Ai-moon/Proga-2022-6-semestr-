public class Solution {
  public static boolean validatePin(String pin) {
    boolean b = true;
    if ((pin.length() == 4) | (pin.length() == 6)) 
      for (int i = 0; i < pin.length(); i++) 
        switch (pin.charAt(i)) {
          case '0': break;
          case '1': break;
          case '2': break;
          case '3': break;
          case '4': break;
          case '5': break;
          case '6': break;
          case '7': break;
          case '8': break;
          case '9': break;
          default : {
            b = false;
            break;
          }
        }
    else b = false;
    return b;
  }
}
